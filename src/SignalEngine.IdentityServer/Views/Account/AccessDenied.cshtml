@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="bi bi-shield-x"></i> Access Denied
                </h4>
            </div>
            <div class="card-body text-center">
                <div class="py-4">
                    <i class="bi bi-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
                </div>
                <h5>You do not have permission to access this resource.</h5>
                <p class="text-muted">
                    If you believe this is an error, please contact your administrator.
                </p>
                <div class="d-grid gap-2 col-6 mx-auto mt-4">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Go to Home</a>
                    <a asp-action="Logout" class="btn btn-outline-secondary">Sign Out</a>
                </div>
            </div>
        </div>
    </div>
</div>
